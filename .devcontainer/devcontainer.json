{
	"name": "C++",
	"build": {
		"dockerfile": "Dockerfile",
		"args": { "VARIANT": "ubuntu-21.04" }
	},
	"runArgs": [ "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"],
	"settings": {
		"C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools"
	},
	"extensions": [
		"ms-vscode.cpptools-extension-pack",
		"medo64.render-crlf"
	],
	"remoteUser": "vscode"
}
